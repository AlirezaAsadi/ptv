<% include partials/header %>

    <style>
        .border {
            border: solid 0.01px #d4afaf;
            background-color: cornsilk;
            display: none;
        }
    </style>


    <body id="plan_journy">

        <!-- Navigation -->
        <% include partials/menu %>

            <!-- Page Content -->
            <div class="container">


                <!-- Content Row -->
                <div class="row">
                    <div class="col-md-12">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h5>Enter your journey details</h5>
                            </div>
                            <div class="panel-body">
                                <div class="form-group" id="startPanel">
                                    <h4>Leaving from</h4>
                                    <select class="form-control" id="start">
                                            <option value="Thomas Cherry Building">Thomas Cherry Building</option>
                                            <option value="Ablett Tower Moat">Ablett Tower Moat</option>
                                            <option value="Medical Centre La Trobe University">Medical Centre</option>
                                            <option value="Terminus La Trobe University">Terminus</option>
                                        </select>
                                </div>
                                <div class="form-group" id="endPanel">
                                    <h4>Going to</h4>
                                    <input list="searchKeywordDropdown" type="text" id="end" name="end" class="searchKeyword form-control" placeholder="Station, stop, address">
									 
									<datalist id="searchKeywordDropdown"></datalist>
                                </div>

                                <button id="showJourney" type="button" class="btn btn-primary">Show journey</button>
                                <button id="switchDirection" type="button" class="btn btn-primary">Switch</button>
                            </div>
                        </div>
                        <div class="alert alert-danger hide" id="error">
                            <strong>No result found!</strong> No result found, please check your input.
                        </div>
                    </div>

                    <div class="col-md-12 center">
                        <div id="mapContainer" style="align: right; margin-left: 50px; margin-right: 10px; height: 600px; margin: auto;"></div>
                    </div>
                </div>

                <!-- /.row -->

                <!-- Footer -->
                <footer>
                    <div class="row">
                        <div class="col-lg-12 center">
                            <p>Copyright &copy; Travel La Trobe University 2016</p>
                        </div>
                    </div>
                </footer>

            </div>
            <!-- /.container -->



  <!-- Scripts-->
  <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCq2IKcNbdT0gATARU38Dr0JFkSp5qJFVM"></script>
  <script type="text/javascript" src="/static/js/config.js"></script>
  <script type="text/javascript" data-main="modules/plan_journy/init" src="/static/js/vendors/r.js"></script>


    </body>

    </html>